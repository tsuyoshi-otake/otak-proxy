{
  "name": "otak-proxy",
  "displayName": "otak-proxy",
  "description": "One-click proxy configuration for VSCode and Git.",
  "publisher": "odangoo",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake/otak-proxy"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake/otak-proxy/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake/otak-proxy#readme",
  "version": "1.6.0",
  "engines": {
    "vscode": "^1.9.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "otak-proxy.toggleProxy",
        "title": "Toggle Proxy"
      },
      {
        "command": "otak-proxy.testProxy",
        "title": "Test Proxy"
      },
      {
        "command": "otak-proxy.importProxy",
        "title": "Import System Proxy"
      }
    ],
    "configuration": {
      "title": "otak-proxy",
      "properties": {
        "otakProxy.proxyUrl": {
          "type": "string",
          "default": "",
          "description": "Proxy server URL (e.g., http://proxy.example.com:8080) for VSCode and Git proxy settings"
        },
        "otakProxy.pollingInterval": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Auto mode polling interval in seconds (10-300). How often to check for system proxy changes."
        },
        "otakProxy.detectionSourcePriority": {
          "type": "array",
          "default": ["environment", "vscode", "platform"],
          "items": {
            "type": "string",
            "enum": ["environment", "vscode", "platform"]
          },
          "description": "Priority order for proxy detection sources. Sources are tried in order until one succeeds."
        },
        "otakProxy.maxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum number of retries for proxy detection when it fails."
        }
      }
    }
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "This extension manages VSCode and Git proxy settings"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "fast-check": "^4.3.0",
    "sinon": "^19.0.2",
    "typescript": "^5.7.3"
  }
}
